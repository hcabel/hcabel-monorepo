{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/hugomeet-signalling-server",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node apps/hugomeet-signalling-server/src/signallingServer.js"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pm2 start apps/hugomeet-signalling-server/src/signallingServer.js"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/hugomeet-signalling-server/**/*"
        ]
      },
      "defaultConfiguration": "test",
      "configurations": {
        "test": {},
        "fix": {
          "fix": true
        }
      }
    }
  },
  "tags": ["backend"],
  "implicitDependencies": []
}
