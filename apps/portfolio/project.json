{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/portfolio",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "nextConfig": "apps/portfolio/next.config.js",
      "options": {
        "root": "apps/portfolio",
        "outputPath": "dist/apps/portfolio"
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "DEV:OnComputer",
      "options": {
        "buildTarget": "portfolio:build",
        "dev": true
      },
      "configurations": {
        "DEV:OnComputer": {
          "buildTarget": "portfolio:build"
        },
        "DEV:OnLocalNetwork": {
          "buildTarget": "portfolio:build",
          "hostname": "10.0.0.78"
        },
        "PROD:OnComputer": {
          "buildTarget": "portfolio:build",
          "dev": false
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": ["pm2 start --name Portfolio next -- start -p 4200"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/portfolio/pages/**/*",
          "apps/portfolio/components/**/*",
          "apps/portfolio/styles/**/*",
          "apps/portfolio/3D/**/*"
        ]
      },
      "defaultConfiguration": "test",
      "configurations": {
        "test": {},
        "fix": {
          "fix": true
        }
      }
    }
  },
  "tags": ["frontend"],
  "implicitDependencies": ["project-api"]
}
