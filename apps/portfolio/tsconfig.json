{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["node"],
    "paths": {
      // External libs paths
      "@hcabel/types/ProjectApi": ["libs/types/types-project-api/src/index.ts"],

      // App local path
      "Styles/*": ["apps/portfolio/styles/*"],
      "Components/*": ["apps/portfolio/components/*"],
      "3D/*": ["apps/portfolio/3D/*"],
      "Images/*": ["apps/portfolio/assets/images/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts", "**/*.glsl"],
  "exclude": ["node_modules", "next.config.js"]
}
